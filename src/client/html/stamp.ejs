        <div class="stamp_preset w-[82px] h-[82px] flex justify-center items-center">
            <img src="../file/stamp/stamp_preset.png" alt="stamp_preset" class="w-full h-full">
        </div>
        <div class="stamp_preset w-[82px] h-[82px] flex justify-center items-center">
            <img src="../file/stamp/stamp_preset.png" alt="stamp_preset" class="w-full h-full">
        </div>
        <div class="stamp_preset w-[82px] h-[82px] flex justify-center items-center">
            <img src="../file/stamp/stamp_preset.png" alt="stamp_preset" class="w-full h-full">
        </div>
        <div class="stamp_preset w-[82px] h-[82px] flex justify-center items-center">
            <img src="../file/stamp/stamp_preset.png" alt="stamp_preset" class="w-full h-full">
        </div>
        <div class="stamp_preset w-[82px] h-[82px] flex justify-center items-center">
            <img src="../file/stamp/stamp_preset.png" alt="stamp_preset" class="w-full h-full">
        </div>
        <div class="stamp_preset w-[82px] h-[82px] flex justify-center items-center">
            <img src="../file/stamp/stamp_preset.png" alt="stamp_preset" class="w-full h-full">
        </div>
    </div>
    <!-- 미션완료 표시 공간 -->
    <div class="w-full  flex flex-col justify-center items-center gap-1">
        <div id="mission_complete" class="relative"></div>
        <div id="mission_box" class="w-full  flex justify-center items-center">
