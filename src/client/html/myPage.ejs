<%- include('common/header.ejs') %>

<div class="font-[Pretendard-Regular]">
    <!--아이디, 비밀번호 입력양식 -->
    <div
        class="flex justify-center items-center pt-[140px] text-[36px] text-[#FFAA2C] font-bold"
    >
        My Page
    </div>

    <div class="flex justify-center items-center mt-[36px]">
        <img src="../file/cat.png" alt="rlqh" />
    </div>

    <div class="flex justify-center items-center mt-[65px] h-[40px]">
        <div class="w-[25%] text-[16px] font-bold">이름</div>
        <input
            type="text"
            name="name"
            placeholder="아이디를 입력해주세요."
            class="w-[70%] rounded-xl text-[14px]"
        />
    </div>

    <div class="flex justify-center items-center mt-[24px] h-[40px]">
        <div class="w-[25%] text-[16px] font-bold">E-mail</div>
        <input
            type="email"
            name="name"
            placeholder="이메일을 입력해주세요."
            class="w-[70%] rounded-xl text-[14px]"
        />
    </div>

    <div class="flex justify-center items-center mt-[65px] h-[40px]">
        <div class="w-[25%] text-[16px] font-bold">연락처</div>
        <input
            type="number"
            name="name"
            placeholder="연락처를 입력해주세요."
            class="w-[70%] rounded-xl text-[14px]"
        />
    </div>

    <!-- 개인정보처리방침 -->
    <div class="flex justify-center items-center mt-[20px]">
        <input
            id="agree"
            name="agree"
            type="checkbox"
            onclick="checkbox_checked()"
            class="w-5 h-5 border border-black/30 focus:border-none ring-1 focus:ring-0 text-black/50"
        />
        <label for="agree">
            <div class="text-[14px] md:text-xl ml-[7px]">
                개인정보처리방침 동의<span class="text-black/50">(필수)</span>
            </div>
        </label>
    </div>

    <!-- 로그인, 회원가입 버튼 -->
    <div class="flex justify-center items-center mt-[34px]">
        <div
            class="flex justify-center items-center w-[144px] h-[41px] border border-gray font-bold bg-[#292929] text-[#C8C8C8] text-[20px] rounded"
        >
            회원가입
        </div>
    </div>
</div>
<%- include('common/footer.ejs') %>
